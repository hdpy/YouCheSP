/* pages/distribution/isDistribution.wxss */
.isDistribution{min-height: 100vh;}
.isDistribution-top{font-size: 0}
.isDistribution-top image{width: 100%;}
.isDistribution-price-w{box-sizing: border-box;padding: 40rpx 30rpx;}
.isDistribution-price{height: 230rpx;width: 100%;background: linear-gradient(to right,#4f4c4b, #4f4c4b);border-radius: 12rpx;padding-top: 30rpx;box-sizing: border-box;box-shadow: 0px 10rpx 20rpx 0rpx #888888;}
.price-tit{height: 60rpx;line-height: 60rpx;margin-left: 30rpx;position: relative}
.price-tit text{color: #eedebb;font-size: 34rpx;font-weight: bold;line-height: 60rpx;}
.gz{position: absolute;width: 180rpx;text-align: center;border-top-left-radius: 30rpx;border-bottom-left-radius: 30rpx;height: 60rpx;line-height: 60rpx;top: 0;right: 0;background-color: #413e3e;color: #eedebb;font-size: 24rpx;font-weight: 600}
.price-cont{display: flex;margin-top: 40rpx}
.price-cont navigator{flex: 1;text-align: center;}
.price-p1{font-size: 24rpx;color: #eedebb;}
.price-p2{font-size: 30rpx;color: #eedebb;font-weight: 700;}

.isDistribution-class{display: flex;}
.isDistribution-class-li{flex: 1;text-align: center;}
.isDistribution-class-li view{font-size: 28rpx;color: #000}
.isDistribution-class-li icon{font-size: 80rpx;color: #eedebb;font-weight: 600;}

.my-invite{box-sizing: border-box;padding: 40rpx 30rpx;}
.my-invite-tit{font-size: 28rpx;color: #333333;font-weight: 600;margin-bottom: 20rpx;}
.my-invite-list{text-align: center;}
.my-invite-list image{width: 200rpx;}
.my-invite-null{font-size: 24rpx;}

.invite-btn{box-sizing: border-box;padding: 0 30rpx 30rpx;}
.invite-btn button{border: 0;background-color: #443d3d;color: #ffd38b;line-height: 80rpx;font-size: 24rpx;font-weight: 600;}