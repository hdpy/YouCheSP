/* pages/personal/topUp.wxss */
.topUp{min-height: 100vh;background-color: #f8f8f8;width: 100%;}
.topUp-price{width: 100%;height: 90rpx;line-height: 90rpx;border-top: 1rpx solid #ddd;border-bottom: 1rpx solid #ddd;background-color: #fff;position: relative;}
.tit{position: absolute;height: 90rpx;line-height: 90rpx;top: 0;left: 0;width: 150rpx;text-align: center;font-size: 30rpx;color: #333}
.topUp-price input{padding-left: 150rpx;font-size: 30rpx;height: 90rpx;line-height: 90rpx;border: none;color: #333}
.pla-class{font-size: 30rpx;color: #999;}
.topUp-btn{margin-top: 40rpx;box-sizing: border-box;padding: 0 20rpx;}
.topUp-btn button{background-color: #e9ebec;font-size: 30rpx;color: #bbbbbb;line-height: 90rpx;}
.topUp-btn button::after{border: 0}

.verificationCode{position: absolute;right: 24rpx;top: 0;z-index: 10;}